{

  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",
  "homepage_url":"https://github.com/mdn/webextensions-examples/tree/master/borderify",

  "description": "Adds a red border to all webpages matching mozilla.org.",

  "icons":
  {
    "48": "icons/app.png"
  },

  "content_scripts":
  [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["borderify.js"]
    }
  ]

}