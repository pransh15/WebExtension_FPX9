{

  "manifest_version": 2,
  "name": "Borderify",
  "version": "1.0",

  "description": "Adds a red border to all webpages matching mozilla.org.",

 "homepage_url":"https://gitubcom/mdn/webextentions-examples/tree/master/borderify",

  "icons": {
    "48": "icons/phh.png"
  },

  "content_script": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["borderify.js"]
    }
  ]
}